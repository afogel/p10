<div class="main-content">
  <div id="create-account">
    <form action="/users" method="post">
      <input type="text" name="username" required placeholder="Username" ><br>
      <input type="password" name="password" required placeholder="Password" ><br>
      <!-- <input type="password" name="password" required placeholder="Confirm your password" ><br> -->
      <input type="text" name="first_name" required placeholder="First name" ><br>
      <input type="text" name="last_name" required placeholder="Last name" ><br>
      <input type="email" name="email_address" required placeholder="Enter your email" ><br>
      <input type="text" name="phone_number" required placeholder="Phone number" ><br>
      <input type="submit" value="Create Account!">
    </form>
  </div>
</div>
